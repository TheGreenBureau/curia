{
  "workbench.editor.customLabels.patterns": {
    "src/components/**/index.tsx": "${dirname}.${extname}"
  },
  "workbench.editor.customLabels.enabled": true,
  "json.schemas": [
    {
      "fileMatch": ["**/courts.json"],
      "schema": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "name", "abbreviation", "offices", "departments"],
          "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "abbreviation": { "type": "string" },
            "offices": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "name", "rooms"],
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" },
                  "rooms": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["id", "name"],
                      "properties": {
                        "id": { "type": "string" },
                        "name": { "type": "string" }
                      }
                    }
                  }
                }
              }
            },
            "departments": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "name"],
                "properties": {
                  "id": { "type": "string" },
                  "name": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  ]
}
